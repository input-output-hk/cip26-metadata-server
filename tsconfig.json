{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}